# Database
DATABASE_URL="postgresql://user:password@localhost:5432/streamingdb"

# JWT
JWT_SECRET="your-secret-key-change-this"
JWT_EXPIRES_IN="7d"

# Server
HOST=0.0.0.0
PORT=3000
RTMP_PORT=1935
RTMPS_PORT=1936

# Domain (Production)
DOMAIN=stream.example.com
API_URL=https://stream.example.com

# MediaMTX
MEDIAMTX_RTMP_URL="rtmp://localhost:8554"
MEDIAMTX_API_URL="http://localhost:9997"

# Wasabi S3 (Required for recording uploads)
WASABI_ACCESS_KEY_ID=your_access_key
WASABI_SECRET_ACCESS_KEY=your_secret_key
WASABI_BUCKET=your_bucket_name
WASABI_REGION=ap-northeast-1
WASABI_ENDPOINT=https://s3.ap-northeast-1.wasabisys.com

# Discord Webhooks (auto-generated by setup-discord script)
DISCORD_BOT_TOKEN=""
DISCORD_GUILD_ID=""
DISCORD_WEBHOOK_AUTH=""
DISCORD_WEBHOOK_STREAM_START=""
DISCORD_WEBHOOK_STREAM_STOP=""
DISCORD_WEBHOOK_RECORDING=""
DISCORD_WEBHOOK_QUOTA=""
DISCORD_WEBHOOK_ERROR=""

# Quota Limits
QUOTA_RECORDING_GB=1
QUOTA_MONTHLY_STREAMING_GB=100

# Recording
RECORDING_DIR="./recordings"
